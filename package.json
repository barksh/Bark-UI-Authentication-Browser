{
    "name": "@barksh-ui/authentication-browser",
    "private": true,
    "version": "1.0.0",
    "description": "Browser UI for Bark Authentication",
    "scripts": {
        "dev": "export VITE_MODULE_AUTHENTICATION_HOST=\"http://localhost:4000\" && vite",
        "build": "tsc && vite build",
        "preview": "vite preview"
    },
    "dependencies": {
        "@barksh/authentication-types": "^1.0.0",
        "@barksh/bark-design-react": "^1.0.0",
        "@barksh/client-authenticator-browser": "^1.2.0",
        "@sudoo/magic": "^1.9.0",
        "@sudoo/react-force": "^2.0.0",
        "connor": "^2.8.0",
        "react-router-dom": "^6.9.0",
        "styled-components": "^5.3.9"
    },
    "devDependencies": {
        "@sudoo/react-force-dev": "^2.0.0",
        "@sudoo/triforce": "^3.11.0",
        "@vitejs/plugin-react": "^3.1.0",
        "dotenv": "^16.0.3",
        "ts-node": "^10.9.1",
        "vite": "^4.2.1"
    },
    "nyc": {
        "extension": [
            ".ts",
            ".tsx"
        ],
        "include": [
            "src/**/*.ts",
            "src/**/*.tsx"
        ],
        "instrument": true,
        "reporter": [
            "json",
            "text-summary"
        ],
        "report-dir": "coverage",
        "sourceMap": true
    }
}